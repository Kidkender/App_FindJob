<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin_AddEmployer_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_arrow"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="5dp"
            android:text="ADD EMPLOYER"
            android:textSize="28sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:src="@drawable/job_check"
                                android:text="City"
                                android:textColor="@color/color_text"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/asterisk" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/txtBirthday"
                            android:layout_width="195dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/shape_txt_update_profile"
                            android:gravity="left|center"
                            android:letterSpacing="0.05"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text=""
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:src="@drawable/job_check"
                                android:text="Website"
                                android:textColor="@color/color_text"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/asterisk" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/txtPhone"
                            android:layout_width="195dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/shape_txt_update_profile"
                            android:letterSpacing="0.05"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/img_employer"
                    android:layout_width="150dp"
                    android:layout_height="145dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_txt_update_profile_img">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="115dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="-5dp"
                        android:src="@drawable/avatar"></ImageView>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="150dp"
                    android:layout_height="145dp"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:src="@drawable/avatar"></ImageView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/job_check"
                        android:text="Name"
                        android:textColor="@color/color_text"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/asterisk" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_txt_update_profile"
                    android:letterSpacing="0.05"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/job_check"
                        android:text="Active Time"
                        android:textColor="@color/color_text"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/asterisk" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_txt_update_profile"
                    android:letterSpacing="0.05"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text=""
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/job_check"
                        android:text="Detailed address "
                        android:textColor="@color/color_text"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/asterisk" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="7dp"
                    android:autofillHints="name"
                    android:background="@drawable/shape_txt_update_profile"
                    android:gravity="left"
                    android:letterSpacing="0.05"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/job_check"
                        android:text="Describe"
                        android:textColor="@color/color_text"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/btn_plus"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/plus" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtDes1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_txt_update_profile"
                    android:letterSpacing="0.05"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text=""
                    android:visibility="gone"
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/txtDes2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_txt_update_profile"
                    android:letterSpacing="0.05"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text=""
                    android:textSize="18sp"
                    android:visibility="gone" />
                <EditText
                    android:id="@+id/txtDes3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_txt_update_profile"
                    android:letterSpacing="0.05"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text=""
                    android:textSize="18sp"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnAddEmployer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/shape_applyjob"
        android:letterSpacing="0.1"
        android:text="ADD EMPLOYER" />

</LinearLayout>