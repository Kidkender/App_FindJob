<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgr_pager"
    android:orientation="vertical"
    tools:context=".view.DetailEmployerActivity">

    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lyNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_detailjob"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="-170dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_arrow"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

            <ImageView
                android:id="@+id/imgViewEmployer"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="-40dp"
                android:src="@drawable/list_flower" />

            <TextView
                android:id="@+id/txtNameEmployer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="5dp"
                android:text="MB BANK"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/layoutMid"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp">


                <LinearLayout
                    android:id="@+id/layoutMiddle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgVacancies"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/vacancy" />

                        <TextView
                            android:id="@+id/txtFollerEmployer"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="12dp"
                            android:gravity="left|center"
                            android:text="1"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imgCountry"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/vietnam" />

                        <TextView
                            android:id="@+id/txtimgCountry"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="10dp"
                            android:gravity="left|center"
                            android:text="Việt Nam"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_address"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/maps" />

                        <TextView
                            android:id="@+id/txtCityEmployer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txtPrice_list"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="12dp"
                            android:gravity="left|center"
                            android:text="Đà Nẵng , Hà Nội"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_type"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/activetime" />

                        <TextView
                            android:id="@+id/txtActiveTimeEmployer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txtPrice_list"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="12dp"
                            android:gravity="left|center"
                            android:text="7:00 - 18:00 Thứ 2 - Thứ 7"
                            android:textSize="17sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_time"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/website" />

                        <TextView
                            android:id="@+id/txtWebsiteEmployer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txtPrice_list"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="12dp"
                            android:gravity="left|center"
                            android:text="https://www.facebook.com/"
                            android:textSize="17sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_facebook"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:src="@drawable/facebook" />

                        <ImageView
                            android:id="@+id/img_instagram"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/instagram" />

                        <ImageView
                            android:id="@+id/img_skype"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/skype" />

                        <ImageView
                            android:id="@+id/img_twitter"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/twitter" />

                        <ImageView
                            android:id="@+id/img_youtube"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/youtube" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_describe"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/describe" />

                        <TextView
                            android:id="@+id/txtDescribeJob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txtPrice_list"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="12dp"
                            android:gravity="left|center"
                            android:text="18:25 10/6/2022"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_request"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/request" />

                        <TextView
                            android:id="@+id/txtRequestJob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txtPrice_list"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="12dp"
                            android:gravity="left|center"
                            android:text="18:25 10/6/2022"
                            android:textSize="17sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFollow"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_applyjob"
            android:letterSpacing="0.15"
            android:text="THEO DÕI" />

    </LinearLayout>


</RelativeLayout>