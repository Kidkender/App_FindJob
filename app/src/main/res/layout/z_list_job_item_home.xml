<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/lyHomeViewList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:background="@color/bgr_pager"
        tools:context=".ui.home.HomeFragment">

        <RelativeLayout
            android:id="@+id/lyViewListPink"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/shape_list"
            android:padding="2dp">

            <ImageView
                android:id="@+id/imgViewEmployer"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/list_flower" />

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="90dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNameJob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txtPrice_list"
                    android:layout_alignParentStart="true"
                    android:text="Fullstack Developer"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_type"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/money1" />

                    <TextView
                        android:id="@+id/txtSalaryJob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/txtPrice_list"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="8dp"
                        android:fontFamily="monospace"
                        android:text="10.000.000VNĐ"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtSkillJob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txtPrice_list"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="monospace"
                    android:text="Java .NET MySQL English"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="285dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/imgHot"
                    android:layout_width="35dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_hot"
                    android:gravity="center"
                    android:text="HOT"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtCityJob"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Da Nang"
                    android:textSize="15sp" />


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>
</layout>